{
  "diagnostic": {
    "enableSign": false
  },
  "suggest": {
    "autoTrigger": false
  },
  "languageserver": {
    "haskell": {
      "command": "ghcide",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {}
      }
    }
  },
  "rust-analyzer": {
    "serverPath": "~/local/rust-analyzer/bin/rust-analyzer-linux",
    "cargo": {
      "loadOutDirsFromCheck": true
    },
    "procMacro": {
      "enable": true
    },
    "diagnostics": { 
      "disabled": ["unresolved-proc-macro"]
    }
  }
}
